<form action="/cart/checkout" method="post">
    <img src="/products/{{image}}" alt="" srcset="">
    <h1>{{name}}</h1>
    <h3>{{description}}</h3>
    <h4><i>${{price}}</i></h4>
    <h5>{{stock}} units</h5>
    <input type="submit" value="Buy now" class="btn btn-primary">
    <input type="submit" value="Add to cart" class="btn btn-secondary">
</form>