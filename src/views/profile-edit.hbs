{{>navbar user=user}}

<form method="post" action="/profile/edit">
    <label for="name">Name</label>
    <input type="text" value={{profile_name}} name="name"/>

    <label for="email">E-Mail</label>
    <input type="text" value={{profile_email}} name="email"/>

    <label for="address">Address</label>
    <input type="text" value={{profile_address}} name="address"/>

    <label for="password">Password (leave blank to use the same pasword)</label>
    <input type="text" name="password"/>

    <label for="age">Age</label>
    <input type="number" value={{profile_age}} name="age"/>

    <label for="prefix">Phone prefix</label>
    <input type="number" value={{profile_prefix}} name="prefix"/>

    <label for="phone">Phone</label>
    <input type="number" value={{profile_phone}} name="phone">

    <label for="admin">Is admin</label>
    <input type="checkbox" checked={{profile_admin}} name="admin">

    <input class="btn btn-primary" type="submit" value="Save changes"/>
</form>
